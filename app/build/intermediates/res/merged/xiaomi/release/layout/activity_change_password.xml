<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/index_bg_003"
              android:orientation="vertical"
              android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <include layout="@layout/include_header"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/selector_red_corners_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_marginTop="@dimen/register_margin"
        android:layout_marginLeft="@dimen/register_margin"
        android:layout_marginRight="@dimen/register_margin">

        <TextView
            style="@style/Smile.TextView._White"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:text="旧  密  码"
            tools:ignore="HardcodedText,RtlSymmetry"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/register_margin"
            android:inputType="textPassword"
            android:background="@color/transparent"
            android:hint="请输入旧密码"
            style="?attr/editTextStyle"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/selector_red_corners_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_marginTop="@dimen/register_margin"
        android:layout_marginLeft="@dimen/register_margin"
        android:layout_marginRight="@dimen/register_margin">

        <TextView
            style="@style/Smile.TextView._White"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:text="新  密  码"
            tools:ignore="HardcodedText,RtlSymmetry"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/register_margin"
            android:background="@color/transparent"
            android:inputType="textPassword"
            style="?attr/editTextStyle"
            android:hint="请输入新密码"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/selector_red_corners_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_marginTop="@dimen/register_margin"
        android:layout_marginLeft="@dimen/register_margin"
        android:layout_marginRight="@dimen/register_margin">

        <TextView
            style="@style/Smile.TextView._White"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:text="确认密码"
            tools:ignore="HardcodedText,RtlSymmetry"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <EditText
            android:id="@+id/et_new_password_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/register_margin"
            android:background="@color/transparent"
            android:inputType="textPassword"
            style="?attr/editTextStyle"
            android:hint="请确认新密码"
            tools:ignore="HardcodedText"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure_change"
        style="@style/common_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        tools:ignore="HardcodedText"
        android:gravity="center_vertical|center_horizontal|center"/>

</LinearLayout>