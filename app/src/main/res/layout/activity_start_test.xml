<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="#00000000"
            android:src="@drawable/back_icon_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ksxm"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_time"
            android:src="@drawable/ic_status_flight_time"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="60ç§’"
            android:textColor="@color/grey700"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/base_horization_line"/>

    <include
        android:id="@+id/test_item"
        layout="@layout/test_list_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_gravity="right" android:background="@color/accent_material_dark">
        <Button
            android:id="@+id/btn_mask_test"
            style="@style/common_button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_action_bar_height"
            android:gravity="center"
            android:text="@string/skipqusetion"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"
            android:layout_margin="10dp" android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_skip_test"
            style="@style/common_button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_action_bar_height"
            android:gravity="center"
            android:text="@string/checkqusetion"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"
            android:layout_margin="10dp" android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_finish_test"
            style="@style/common_button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_action_bar_height"
            android:gravity="center"
            android:text="@string/nextqusetion"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"
            android:layout_margin="10dp" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>