<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="WelcomeScreenTheme.SolidNavigation">
        <!-- Customize your theme here. -->
        <item name="android:colorForeground">@color/guide_color</item>
        <item name="android:textColorPrimary">@color/white_grey</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white_grey</item>
        <item name="welcomeButtonSkipText">跳过</item>
        <item name="welcomeButtonDoneText">开始</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/air_speed_label</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/greyText</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/air_speed_label</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="NoBackGroundDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MenuStyle" parent="WelcomeScreenTheme">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@color/bga_pp_navigationBarColor</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>

    <style name="common_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:background">@drawable/selector_red_corners_button</item>
        <item name="android:padding">6.0dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Animated</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Animated">
        <item name="animation">slide</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Light.Animated">
        <item name="animation">slide</item>
    </style>

    <style name="MatchWrapTv" parent="MatchWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_red_corners_button</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AutoWrapTv" parent="AutoWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_red_corners_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- 共用层样式 -->
    <style name="base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 上圆角样式 -->
    <style name="setting_top_layout" parent="base_layout">
        <item name="android:background">@drawable/setting_top_layout_selector</item>
    </style>

    <!-- 无圆角样式 -->
    <style name="setting_mid_layout" parent="base_layout">
        <item name="android:background">@drawable/setting_mid_layout_selector</item>
    </style>

    <!-- 下圆角样式 -->
    <style name="setting_bottom_layout" parent="base_layout">
        <item name="android:background">@drawable/setting_bottom_layout_selector</item>
    </style>

    <!-- 全圆角样式 -->
    <style name="single_layout" parent="base_layout">
        <item name="android:background">@drawable/setting_single_layout_selector</item>
    </style>

    <style name="WelcomeScreenText.Title.Centered.Custom">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/theme_bg_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tweetName">
        <item name="android:textColor">@color/light_yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">#778085</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
    </style>

    <style name="About">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Appbg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/air_speed_label</item>

    </style>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eff0f1</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="WelcomeScreenTheme"/>

    <style name="AppTheme.PopupOverlay" parent="WelcomeScreenTheme"/>

</resources>
