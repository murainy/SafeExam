<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchMatch.Vertical"
              android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_system_gallery_crop_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        android:src="@drawable/hjzgg"/>

    <TextView
        android:id="@+id/tv_system_gallery_crop_choose"
        style="@style/MatchWrapTv"
        android:text="选择"/>

    <TextView
        android:id="@+id/tv_system_gallery_crop_take_photo"
        style="@style/MatchWrapTv"
        android:text="拍照"/>

    <TextView
        android:id="@+id/tv_system_gallery_crop_take_apply"
        style="@style/MatchWrapTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应用"/>
</LinearLayout>