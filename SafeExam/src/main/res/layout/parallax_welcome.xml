<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_view1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_column="0"
        android:layout_row="0"
        android:src="@drawable/cloud"
        android:layout_alignTop="@+id/ci_view5"
        android:layout_alignStart="@+id/ci_view2"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_view2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_column="1"
        android:layout_row="1"
        android:src="@drawable/fish"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/ci_view4"
        android:layout_toEndOf="@+id/ci_view3"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_view5"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_column="2"
        android:layout_row="2"
        android:src="@drawable/sky"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_view3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_column="2"
        android:layout_row="0"
        android:src="@drawable/rain"
        android:layout_below="@+id/ci_view5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_view4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_column="0"
        android:layout_row="2"
        android:src="@drawable/hippophaes"
        android:layout_below="@+id/ci_view3"
        android:layout_alignStart="@+id/ci_view5"
        android:layout_marginTop="19dp"/>
</RelativeLayout>

